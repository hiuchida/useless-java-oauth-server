<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Useless OAuth2 Server Web Application</display-name>
  <servlet>
  	<servlet-name>AuthorizationServlet</servlet-name>
  	<display-name>AuthorizationServlet</display-name>
  	<description></description>
  	<servlet-class>jp.hiuchida.useless_oauth_server.servlet.AuthorizationServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DecisionServlet</servlet-name>
  	<display-name>DecisionServlet</display-name>
  	<description></description>
  	<servlet-class>jp.hiuchida.useless_oauth_server.servlet.DecisionServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>TokenServlet</servlet-name>
  	<display-name>TokenServlet</display-name>
  	<description></description>
  	<servlet-class>jp.hiuchida.useless_oauth_server.servlet.TokenServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AuthorizationServlet</servlet-name>
  	<url-pattern>/authorization</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DecisionServlet</servlet-name>
  	<url-pattern>/decision</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TokenServlet</servlet-name>
  	<url-pattern>/token</url-pattern>
  </servlet-mapping>
</web-app>
